<div class="container">
<h3>Add Comment</h3>

<%= form_for([@tweet, @tweet.comments.build]) do |f| %>

 <p>
    <%= f.label :username %><br>
    <%= f.text_area(:username, {:class => 'form-control'}) %>
 </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area(:body, {:class => 'form-control'}) %>
  </p>
  <p>
     <%= f.submit({:class => 'btn btn-default'}) %>
  </p>
<% end %>
</div>
