<!DOCTYPE html>
<html>
  <head>
    <title>One Month Rails Project</title>
    <%= csrf_meta_tags %>
 
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </head>

  <body>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
      <div class="container">
        <%= link_to "One Month Rails", root_path, class: "navbar-brand" %>
        <ul class="nav navbar-nav mr-auto">
          <li class="nav-item"><%= link_to "Home", root_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "About", about_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Contact", contact_us_path, class: "nav-link" %></li>
         
           </ul>
        <ul class="nav navbar-nav ml-auto">
             <li class="nav-item dropdown show"><%= link_to "Resources Menu", "#", class: "nav-link dropdown-toggle", role: "menu", id: "navbarDropdown", data: { toggle: 'dropdown' }%>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
               <%= link_to "All Tweets", tweets_path, class: "dropdown-item"%>
               <div class="dropdown-divider"></div>
               <%= link_to "My Feed", feed_path, class: "dropdown-item"%>
               <div class="dropdown-divider"></div>
               <%= link_to "All Items", items_path, class: "dropdown-item"%>
               <div class="dropdown-divider"></div>
               <%= link_to "Admin", "admin", class: "dropdown-item"%>
            </div>
          </li>

          <% if user_signed_in? %>
            <li class="nav-item"><%= link_to "Log out", signout_path, method: :delete, class: "nav-link" %></li>

        
             

          <%else %>
            <li class="nav-item"><%= link_to "Sign Up", signup_path, class: "btn btn-primary" %></li>
            <li class="nav-item"><%= link_to "Sign In", signin_path, class: "nav-link" %></li>
          <%end %>
        </ul>
      </div>
    </nav>

    <!--Flash messages -->
    <% flash.each do |name, message| %>
    <%= content_tag(:div, message, class: "alert alert-info #{name}") %>
    <% end %>
    <!-- Page Content -->
    <%= yield %>
    
    <!-- Footer -->
    <footer class="small text-muted">
      <div class="container">
        <hr>
        <center>
          <p>Â© 2016 One Month</p>
        </center>
      </div>
    </footer>

  </body>

</html>
